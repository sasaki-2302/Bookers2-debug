<table class='table table-hover table-inverse text-center'>
  <thead >
    <tr>
      <!--<th>Weekly<br>Favorite rank</th>-->
      <th>Cover</th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Favorite</th>
      <th>Comment</th>
      <th>PV</th>
      <th>Rate</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book,i| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td id="favorite_buttons_<%= book.id %>">
          <%= render "favorites/favorite_btn", book: book %>
        </td>
        <td><%= book.book_comments.count %></td>
        <td><%= book.impressionist_count %></td>
        <td><%= render "books/static_rate", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>